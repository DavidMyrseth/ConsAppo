<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Teku.MainPage"
             Title="">
    <VerticalStackLayout>
        <Grid Padding="10" BackgroundColor="#f8f8f8">
            <Label Text="Consultations" 
                   FontSize="24" 
                   FontAttributes="Bold" 
                   VerticalOptions="Center" />
        </Grid>

        <ScrollView>
            <VerticalStackLayout x:Name="ConsultationsStack" Padding="10" Spacing="20">
                <!-- Consultations will be added here -->
            </VerticalStackLayout>
        </ScrollView>

        <Button x:Name="AddConsultationButton" 
                Text="Add Consultation" 
                IsVisible="False"
                Margin="10"
                Clicked="OnAddConsultationClicked" />
    </VerticalStackLayout>
</ContentPage>