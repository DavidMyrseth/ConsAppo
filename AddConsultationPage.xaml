<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Teku.AddConsultationPage"
             Title="Add Consultation">

    <VerticalStackLayout Padding="20" Spacing="15">
        <Label Text="Add Consultation" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center" />

        <Entry x:Name="TeacherEntry" Placeholder="Teacher" />
        <Entry x:Name="RoomEntry" Placeholder="Room" />
        <Entry x:Name="TimeEntry" Placeholder="Time (e.g., 10:00-12:00)" />
        <Entry x:Name="DayEntry" Placeholder="Day" />

        <Button Text="Add" Clicked="OnAddClicked" />
        <Button Text="Cancel" Clicked="OnCancelClicked" />
    </VerticalStackLayout>
</ContentPage>
